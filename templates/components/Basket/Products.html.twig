{# <twig:c975LShop:Basket:Products basket="{{ basket }}" [type="simple|complex"]" readonly="true"/> #}
{% trans_default_domain 'shop' %}
{% if basket.total > 0 %}
    <table>
        {# Products #}
        {% for product in basket.products %}
            <twig:c975LShop:Basket:Product product="{{ product.product }}" quantity="{{ product.quantity }}" total="{{ product.total }}" totalVat="{{ product.totalVat }}" type="{{ type }}" status="{{ basket.status }}"/>
        {% endfor %}
        {# Frais de port #}
            <tr class="shipping">
                <td>
                    {{ 'label.shipping'|trans }}
                </td>
                <td>
                    <span data-basket-target="shipping">{{ basket.shipping > 0 ? (basket.shipping / 100)|number_format(2) ~ basket.currency : 'label.offered'|trans }}</span>
                </td>
            </tr>
        {# Total #}
        <tfoot>
            <tr>
                <th><strong>{{ 'label.total'|trans }}</strong></th>
                <th>
                    <strong>
                        <span data-basket-target="total">{{ ((basket.total + basket.shipping) / 100)|number_format(2) }}</span><span data-basket-target="currency">{{ basket.currency }}</span>
                        <br>
                        (x <span data-basket-target="quantity">{{ basket.quantity }}</span>)
                    </strong>
                </th>
            </tr>
        </tfoot>
    </table>
{% else %}
    <p class="text text-center lead">{{ 'label.basket_empty'|trans }}</p>
{% endif %}