{# <twig:c975LShop:Basket:ProductsTotal product="{{ product }}" type="simple|complex"/> #}
<div>
    {% if type == "complex" %}
        Prix HT : {{ (total / 100 - totalVat)|format_currency(product.currency) }}<br>
        Taux TVA : {{ product.vat|number_format(2) }} %<br>
        TVA : {{ totalVat|format_currency(product.currency) }}<br>
        <strong>Prix TTC : {{ (total / 100)|format_currency(product.currency) }}</strong>
    {% else %}
        <strong>{{ (total / 100)|format_currency(product.currency) }}</strong>
    {% endif %}
</div>