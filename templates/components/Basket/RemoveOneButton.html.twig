{% set type = type | default('primary') %}
<button
    data-action="click->basket#removeItem"
    data-type="{{ type }}"
    data-quantity="-1"
    data-item-id="{{ item.item.id }}"
    data-title="{{ item.parent.title ~ ' (' ~ item.item.title ~')' }}"
    data-alert="warning"
    data-text="{{ 'label.removed'|trans({}, 'shop') }}"
    class="btn btn-{{ type }} btn-small lead">
    -
</button>