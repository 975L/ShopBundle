<section id="contributors">
    <h2>{{ 'label.contributors'|trans({}, 'shop') }}</h2>
    {% if contributors is not empty %}
        <p class="text text-center italic">{{ 'label.only_those_left_message'|trans({}, 'shop') }}</p>
        <div class="cards">
            {% for contributor in contributors %}
                <twig:c975LShop:Crowdfunding:Contributor contributor="{{ contributor }}"/>
            {% endfor %}
        </div>
    {% else %}
        <p class="text text-center">{{ 'label.no_contributor'|trans({}, 'shop') }}</p>
    {% endif %}
</section>