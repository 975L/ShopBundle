<section id="counterparts">
    <h2>{{ 'label.counterparts'|trans({}, 'shop') }}</h2>
    {% if counterparts is not empty %}
        <div data-controller="basket">
            <div class="cards">
                {% for counterpart in counterparts %}
                    <twig:c975LShop:Crowdfunding:Counterpart counterpart="{{ counterpart }}"/>
                {% endfor %}
            </div>
            <twig:c975LShop:Basket:Message/>
            <twig:c975LShop:Shop:NavbarBasket/>
        </div>
    {% else %}
        <p class="text text-center lead">{{ 'label.no_counterpart'|trans({}, 'shop') }}</p>
    {% endif %}
</section>