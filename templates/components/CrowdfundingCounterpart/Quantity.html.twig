<hr>
{% if null != limited %}
    <p>{{ 'label.limited_quantity'|trans({}, 'shop') }} : {{ limited }}</p>
    <p>{{ 'label.ordered_quantity'|trans({}, 'shop') }} : {{ ordered }}</p>
    <p><strong>{{ 'label.remaining_quantity'|trans({}, 'shop') }} : {{ limited - ordered }}</strong></p>
{% else %}
    <p>&nbsp;</p>
    <p><strong>{{ 'label.ordered_quantity'|trans({}, 'shop') }} : {{ ordered }}</strong></p>
    <p>&nbsp;</p>
{% endif %}