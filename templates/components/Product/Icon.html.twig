{% set icon = 'bag-shopping.svg' %}
{% if productItem.file != null and productItem.file.name != null %}
    {% if productItem.file.name matches '/.(jpg|jpeg|png|gif)$/i' %}
        {% set icon = 'file-image.svg' %}
    {% elseif productItem.file.name matches '/.(mp3|wav|ogg)$/i' %}
        {% set icon = 'file-audio.svg' %}
    {% elseif productItem.file.name matches '/.(mp4|avi|mov)$/i' %}
        {% set icon = 'file-video.svg' %}
    {% elseif productItem.file.name matches '/.(zip|rar)$/i' %}
        {% set icon = 'file-zipper.svg' %}
    {% elseif productItem.file.name matches '/.(pdf)$/i' %}
        {% set icon = 'file-pdf.svg' %}
    {% else %}
        {% set icon = 'file.svg' %}
    {% endif %}
{% endif %}
<div class="icon-wrapper">
    <twig:c975LSite:Image:Icon src="bundles/c975lshop/images/{{ icon }}" width="32" height="32"/>
</div>